<h3>List of All Events</h3>
<table class="table">
  <thead>
    <tr>
      <th>Event name</th>
      <th>Description</th>
      <th>Event Date</th>
      <th>Event Creator</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr><% @events.each do |e| %></tr>
      <td><%= e.title %></td>
      <td><%= e.description %></td>
      <td><%= e.event_date %></td>
      <td><%= e.creator.username %></td>
      <td><%= link_to "Show details", event_path(e) %></td>
    <% end %>
 </tbody>
</table>

